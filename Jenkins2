pipeline {
  agent {label 'agent'}

  environment {
    NODE_ENV = 'development'
    JAVA_HOME = '/usr/lib/jvm/java-1.8.0-openjdk-1.8.0.362.b09-4.el9.x86_64'
    ANDROID_HOME = '/opt/android-sdk'
    PATH = "${ANDROID_HOME}/cmdline-tools/latest/bin:${ANDROID_HOME}/platform-tools:${ANDROID_HOME}/emulator:${ANDROID_HOME}/tools:${ANDROID_HOME}/tools/bin:${PATH}"
  }

  tools {
    nodejs 'jsnode' // Must match Jenkins global tool name
  }

  stages {
    stage('Checkout Code') {
      steps {
        git branch: 'main', url: 'https://github.com/rohanPSI-1122/elm-react-native.git', credentialsId: 'rohanPSI-1122'
      }
    }

    stage('Install Dependencies') {
      steps {
        sh 'npm install'
        sh 'npx react-native link'
      }
    }

    stage('Lint') {
      steps {
        script {
          try {
            sh 'npx eslint .'
          } catch (Exception e) {
            echo "⚠️ Linting failed or ESLint not installed. Continuing..."
          }
        }
      }
    }

    stage('Test') {
      steps {
        script {
          try {
            sh 'npm test'
          } catch (Exception e) {
            echo "⚠️ Tests failed or not defined. Continuing..."
          }
        }
      }
    }

    stage('Build APK') {
  steps {
    dir('android') {
      sh 'chmod +x gradlew'
      sh 'mkdir -p app/src/main/assets'

      sh '''
        npx react-native bundle \
          --platform android \
          --dev false \
          --entry-file index.android.js \
          --bundle-output /home/ubuntu/workspace/elm-react/android/app/src/main/assets/index.android.bundle \
          --assets-dest /home/ubuntu/workspace/elm-react/android/app/src/main/res
      '''

      sh './gradlew assembleDebug'
    }
  }
}

    stage('Archive APK') {
      steps {
        archiveArtifacts artifacts: 'android/app/build/outputs/apk/debug/*.apk', fingerprint: true
      }
    }
  }

  post {
    success {
      echo "✅ Build completed successfully!"
    }
    failure {
      echo "❌ Build failed."
    }
  }
}
